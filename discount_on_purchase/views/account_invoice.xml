<odoo>
    <data>

        <record id="invoice_view_form_discount_inherit" model="ir.ui.view">
            <field name="name">account.move.form.discount.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[1]/group" position="after">
                    <div class="container">
                        <field name="enable_discount" invisible="1"/>
                        <field name="discount_amount" invisible="1"/>
                        <label for="discount_type" string="Discount Type:"
                               attrs="{'invisible':[('type','not in', ['in_invoice','in_refund'])]}"/>
                        <field name="discount_type" class="oe_inline"
                               attrs="{'invisible':[('type','not in', ['in_invoice','in_refund'])],'readonly':['|',('enable_discount','!=',True),('state', 'in', ['posted', 'cancel'])]}"/>
                    </div>
                    <div class="container">
                        <label for="discount_rate" string="Discount :"
                               attrs="{'invisible':[('type','not in', ['in_invoice','in_refund'])]}"/>
                        <field name="discount_rate" class="oe_inline"
                               attrs="{'invisible':[('type','not in', ['in_invoice','in_refund'])],'readonly':['|','|',('enable_discount','!=',True),('state', 'in', ['posted', 'cancel']), ('discount_type', 'in', [None, False])]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='amount_by_group']" position="after">
                    <field name="discount_amount" attrs="{'invisible':[('discount_amount','=',0),('type','not in', ['in_invoice','in_refund'])]}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>

